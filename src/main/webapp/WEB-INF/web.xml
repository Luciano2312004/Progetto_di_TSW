<servlet-mapping>
<servlet-name>ModificaProdottoServlet</servlet-name>
<url-pattern>/ModificaProdottoServlet</url-pattern>
</servlet-mapping>
<filter>
<filter-name>AuthFilter</filter-name>
<filter-class>control.AuthFilter</filter-class>
</filter>
<filter-mapping>
<filter-name>AuthFilter</filter-name>
<url-pattern>/admin/*</url-pattern>
<url-pattern>/AdminProdottiServlet</url-pattern>
<url-pattern>/AmministratoreOrdiniServlet</url-pattern>
</filter-mapping>
<welcome-file-list>
